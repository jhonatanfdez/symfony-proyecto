{% extends 'home/base.html.twig' %}

{% block title %}User{% endblock %}

{% block breadcrumbs %}
  {% include 'partials/_breadcrumbs.html.twig' with {
    items: [
      { label: 'Usuarios', route: 'app_user_index' },
      { label: user.name, active: true }
    ]
  } %}
{% endblock %}

{% block content %}
    {% set cardBody %}
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th style="width: 200px;">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th style="width: 200px;">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th style="width: 200px;">Roles</th>
                    <td>
                        {% if user.roles is iterable %}
                            {% for role in user.roles %}
                                {% if role == 'ROLE_ADMIN' %}
                                    <span class="badge bg-danger">Administrador</span>
                                {% elseif role == 'ROLE_USER' %}
                                    <span class="badge bg-success">Usuario</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ role }}</span>
                                {% endif %}
                            {% endfor %}
                        {% else %}
                            <span class="badge bg-secondary">N/D</span>
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th style="width: 200px;">Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th style="width: 200px;">Fecha_cumpleanos</th>
                    <td>{{ user.fechaCumpleanos ? user.fechaCumpleanos|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>
    {% endset %}

    {% set cardFooter %}
        <div class="d-flex gap-2">
            <a class="btn btn-secondary" href="{{ path('app_user_index') }}">Volver al listado</a>
            <a class="btn btn-info" href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    {% endset %}

    {% include 'partials/_card.html.twig' with {
        title: 'Usuario',
        content: cardBody,
        footer: cardFooter,
        color: 'light'
    } %}
{% endblock %}
