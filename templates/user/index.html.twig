{% extends 'home/base.html.twig' %}

{% block title %}Listado de Usuarios{% endblock %}

{% block breadcrumbs %}
  {% include 'partials/_breadcrumbs.html.twig' with {
    items: [
      { label: 'Usuarios', active: true }
    ]
  } %}
{% endblock %}

{% block content %}
    {% set cardBody %}
        {# Buscador moderno con colores neutros #}
        <div class="mb-4">
            <div class="position-relative overflow-hidden rounded-3 shadow" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border: 1px solid #dee2e6;">
                <div class="p-4">
                    <form method="get" action="{{ path('app_user_index') }}" id="searchForm">
                        <div class="d-flex flex-wrap gap-3 align-items-stretch">
                            {# Select de campo #}
                            <div class="flex-shrink-0" style="min-width: 200px;">
                                <select name="field" id="searchField" class="form-select form-select-lg shadow-sm h-100" style="border: 2px solid #dee2e6; transition: all 0.3s ease;">
                                    <option value="name" {{ app.request.query.get('field', 'name') == 'name' ? 'selected' : '' }}>
                                        Buscar en: Nombre
                                    </option>
                                    <option value="email" {{ app.request.query.get('field') == 'email' ? 'selected' : '' }}>
                                        Buscar en: Email
                                    </option>
                                </select>
                            </div>

                            {# Input de búsqueda #}
                            <div class="flex-grow-1 position-relative" style="min-width: 300px;">
                                <input type="text" name="query" id="searchQuery" class="form-control form-control-lg shadow-sm h-100" placeholder="Escribe para buscar..." value="{{ app.request.query.get('query') }}" style="border: 2px solid #dee2e6; padding-right: 40px; transition: all 0.3s ease;" autofocus>
                                {% if app.request.query.get('query') %}
                                    <a href="{{ path('app_user_index') }}" class="position-absolute top-50 end-0 translate-middle-y me-3 text-danger opacity-75" title="Limpiar búsqueda" style="text-decoration: none; font-size: 1.2rem;">
                                        <i class="fa-solid fa-circle-xmark"></i>
                                    </a>
                                {% endif %}
                            </div>

                            {# Botones de acción #}
                            <div class="flex-shrink-0 d-flex gap-2">
                                <button type="submit" class="btn btn-primary btn-lg shadow-sm h-100" style="min-width: 130px; transition: all 0.2s ease;">
                                    <i class="fa-solid fa-search me-2"></i>Buscar
                                </button>
                                {% if app.request.query.get('query') %}
                                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-lg shadow-sm h-100 d-flex align-items-center justify-content-center" title="Limpiar filtros" style="width: 48px;">
                                        <i class="fa-solid fa-rotate-left"></i>
                                    </a>
                                {% endif %}
                            </div>
                        </div>

                        {# Indicador de búsqueda activa #}
                        {% if app.request.query.get('query') %}
                            <div class="mt-3 pt-3 border-top">
                                <div class="d-flex align-items-center gap-2 text-muted small">
                                    <i class="fa-solid fa-circle-info text-primary"></i>
                                    <span>Mostrando resultados donde <strong>{{ app.request.query.get('field') }}</strong> contiene <strong class="text-dark">"{{ app.request.query.get('query') }}"</strong></span>
                                    <span class="badge bg-primary ms-2">{{ users|length }} encontrado(s)</span>
                                </div>
                            </div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>

        <style>
            #searchField:focus,
            #searchQuery:focus {
                border-color: #0d6efd !important;
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15) !important;
            }
            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(13, 110, 253, 0.3) !important;
            }
            .btn-secondary:hover {
                transform: translateY(-2px);
            }
        </style>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Name</th>
                    <th>Fecha_cumpleanos</th>
                        <th>Estado</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="badge bg-danger">Administrador</span>
                            {% elseif role == 'ROLE_USER' %}
                                <span class="badge bg-success">Usuario</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.fechaCumpleanos ? user.fechaCumpleanos|date('Y-m-d') : '' }}</td>
                        <td>
                            {% if user.activo is defined and user.activo %}
                                <span class="badge bg-success">Activo</span>
                            {% else %}
                                <span class="badge bg-secondary">Inactivo</span>
                            {% endif %}
                        </td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('app_user_show', {'id': user.id}) }}">Ver</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>
                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display: inline-block;" class="js-delete-form" data-swal-title="¿Eliminar usuario?" data-swal-text="Esta acción no se puede deshacer.">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('app_user_new') }}">Crear nuevo usuario</a>
    {% endset %}

    {% include 'partials/_card.html.twig' with {
        title: 'Listado de Usuarios',
        content: cardBody,
        color: 'light'
    } %}
{% endblock %}



