{% extends 'home/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Name</th>
                <th>Fecha_cumpleanos</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>

                        {# Si tiene más de un rol, mostrarlos todos #}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="badge bg-danger">Administrador</span>
                            {% elseif role == 'ROLE_USER' %}
                                <span class="badge bg-success">Usuario</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endif %}
                        {% endfor %}

                </td>
                <td>{{ user.name }}</td>
                <td>{{ user.fechaCumpleanos ? user.fechaCumpleanos|date('Y-m-d') : '' }}</td>
                <td>
                    {# Botón para ver los detalles del usuario #}
                    <a class="btn btn-info btn-sm" href="{{ path('app_user_show', {'id': user.id}) }}">Ver</a>

                    {# Botón para editar el usuario #}
                    <a class="btn btn-warning btn-sm" href="{{ path('app_user_edit', {'id': user.id}) }}">Editar</a>

                    {# Formulario inline para eliminar con confirmación SweetAlert2 #}
                    <form method="post"
                          action="{{ path('app_user_delete', {'id': user.id}) }}"
                          style="display: inline-block;"
                          class="js-delete-form"
                          data-swal-title="¿Eliminar usuario?"
                          data-swal-text="Esta acción no se puede deshacer.">
                        {#
                            CÓMO FUNCIONA:
                            1. El usuario hace clic en "Eliminar"
                            2. El listener global en base.html.twig intercepta el submit
                            3. Lee los atributos data-swal-title y data-swal-text
                            4. Muestra un modal SweetAlert2 con dos botones: "Cancelar" y "Sí, eliminar"
                            5. Solo si confirma, se envía el formulario al servidor
                            6. Si cancela, el modal se cierra y no pasa nada
                        #}

                        {# Token CSRF para protección contra ataques CSRF #}
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">

                        {# Botón que dispara la confirmación SweetAlert2 #}
                        <button class="btn btn-danger btn-sm">Eliminar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_user_new') }}">Crear nuevo usuario</a>
{% endblock %}



