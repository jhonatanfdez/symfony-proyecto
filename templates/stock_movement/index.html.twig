{#
 # Template: index.html.twig
 # Propósito: Lista todos los movimientos de stock
 #
 # Características:
 # - Diseño responsive con Bootstrap
 # - Tabla con ordenamiento y búsqueda
 # - Badges de colores según tipo de movimiento
 # - Acciones contextuales por movimiento
 #}
{% extends 'home/base.html.twig' %}

{% block title %}Movimientos de Stock{% endblock %}

{% block body %}
    <div class="container-fluid">
        {# Encabezado con botón de nuevo movimiento #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestión de Movimientos</h1>
            <a href="{{ path('app_stock_movement_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nuevo Movimiento
            </a>
        </div>

        {# Tarjeta principal con la tabla de movimientos #}
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Lista de Movimientos de Stock</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Producto</th>
                                <th>Tipo</th>
                                <th>Cantidad</th>
                                <th>Usuario</th>
                                <th>Descripción</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for stock_movement in stock_movements %}
                            <tr>
                                <td>{{ stock_movement.fecha ? stock_movement.fecha|date('d/m/Y H:i') : '' }}</td>
                                <td>{{ stock_movement.product.nombre }}</td>
                                <td>
                                    {% if stock_movement.tipo == 'ENTRADA' %}
                                        <span class="badge bg-success">Entrada</span>
                                    {% elseif stock_movement.tipo == 'SALIDA' %}
                                        <span class="badge bg-danger">Salida</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">Ajuste</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if stock_movement.tipo == 'ENTRADA' %}
                                        <span class="text-success">+{{ stock_movement.cantidad }}</span>
                                    {% elseif stock_movement.tipo == 'SALIDA' %}
                                        <span class="text-danger">-{{ stock_movement.cantidad }}</span>
                                    {% else %}
                                        <span class="text-warning">{{ stock_movement.cantidad }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ stock_movement.createBy.name ?: stock_movement.createBy.email }}</td>
                                <td>{{ stock_movement.descripcion|slice(0, 50) }}{{ stock_movement.descripcion|length > 50 ? '...' : '' }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="{{ path('app_stock_movement_show', {'id': stock_movement.id}) }}"
                                           class="btn btn-info" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    <i class="fas fa-box-open fa-2x mb-2"></i>
                                    <p>No se encontraron movimientos de stock</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
