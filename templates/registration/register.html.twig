{% extends 'auth/base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block content %}
    <div class="auth-header">
        <div class="auth-logo">
            <img src="{{ asset('logo-aquapanel.svg') }}" alt="AquaPanel" class="brand-logo-img"/>
        </div>
        <div class="brand-name">Aqua <span class="accent">Panel</span></div>
        <h1 class="auth-title">Crear Cuenta</h1>
        <p class="auth-subtitle">Completa el formulario para registrarte</p>
    </div>

    {% if form_errors(registrationForm) %}
        <div class="alert-custom alert-danger-custom">
            <i class="fa-solid fa-circle-exclamation me-2"></i>
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm, {'attr': {'data-turbo': 'false'}}) }}

        <div class="form-group">
            {{ form_label(registrationForm.name, 'Nombre completo', {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group-custom">
                <i class="fa-solid fa-user input-icon"></i>
                {{ form_widget(registrationForm.name, {
                    'attr': {
                        'class': 'form-control-custom',
                        'placeholder': 'Tu nombre'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.name) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.fecha_cumpleanos, 'Fecha de nacimiento', {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group-custom">
                <i class="fa-solid fa-calendar-day input-icon"></i>
                {{ form_widget(registrationForm.fecha_cumpleanos, {
                    'attr': {
                        'class': 'form-control-custom'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.fecha_cumpleanos) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.email, 'Correo electrónico', {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group-custom">
                <i class="fa-solid fa-envelope input-icon"></i>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control-custom',
                        'placeholder': 'correo@ejemplo.com'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Contraseña', {'label_attr': {'class': 'form-label'}}) }}
            <div class="input-group-custom">
                <i class="fa-solid fa-key input-icon"></i>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control-custom',
                        'placeholder': '••••••••'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="checkbox-custom">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones') }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn-primary-custom">
            <i class="fa-solid fa-user-check me-2"></i>
            Crear Cuenta
        </button>

    {{ form_end(registrationForm) }}

    <div class="auth-footer">
        <p class="mb-0">
            ¿Ya tienes una cuenta?
            <a href="{{ path('app_login') }}">Inicia sesión aquí</a>
        </p>
    </div>
{% endblock %}

