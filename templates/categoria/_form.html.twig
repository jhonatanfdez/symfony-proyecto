    tras el POST + redirect y que los mensajes flash se muestren sin interferencias.
    Si prefieres mantener Turbo, podemos montar Turbo Streams para flashes.
#}
{{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
    {{ form_widget(form) }}
    <div class="d-flex gap-2 flex-wrap mt-3">
        <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
        <a class="btn btn-secondary" href="{{ path('app_categoria_index') }}">Volver al listado</a>
        {# Permite inyectar botones/acciones extra desde la plantilla que incluye este partial (por ejemplo, borrar) #}
        {{ extra_buttons|default('')|raw }}
    </div>
{{ form_end(form) }}
