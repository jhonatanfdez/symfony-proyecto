{% extends 'home/base.html.twig' %}

{% block title %}Editar Categoría{% endblock %}

{% block breadcrumbs %}
  {% include 'partials/_breadcrumbs.html.twig' with {
    items: [
      { label: 'Categorías', route: 'app_categoria_index' },
      { label: 'Editar', active: true }
    ]
  } %}
{% endblock %}

{% block content %}
  {% set cardBody %}
    {{ include('categoria/_form.html.twig', {
      'button_label': 'Actualizar',
      'extra_buttons': include('categoria/_delete_form.html.twig')
    }) }}
  {% endset %}

  {% include 'partials/_card.html.twig' with {
    title: 'Editar Categoría',
    content: cardBody,
    color: 'light'
  } %}
{% endblock %}
